<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <View
        android:id="@+id/separatorView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/new_grey_color"
        android:layout_alignParentTop="true"/>

    <ImageView
        android:id="@+id/ivFavBtn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_fav"
        android:padding="8dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="12dp"/>

    <TextView
        android:id="@+id/tvChannelName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/ivFlagIcon"
        android:text="CNN"
        android:textColor="@color/new_text_color"
        android:fontFamily="@font/inter_regular"
        android:textSize="14dp"
        android:focusable="false"
        android:elevation="0dp"
        android:clickable="false"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/ivFavBtn"
        android:paddingHorizontal="10dp"
        android:inputType="textMultiLine"
        android:maxLines="2"/>

    <TextView
        android:id="@+id/ivFlagIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="30dp"
        android:textColor="@color/tt_black"
        android:textSize="20dp"
        android:focusable="false"
        android:clickable="false"
        android:elevation="0dp"
        android:layout_toStartOf="@id/tvLanguage"/>

    <TextView
        android:id="@+id/tvLanguage"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="English"
        android:textColor="@color/new_text_color"
        android:fontFamily="@font/inter_regular"
        android:textSize="14dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:paddingHorizontal="5dp"
        android:gravity="center_horizontal"
        android:focusable="false"
        android:clickable="false"
        android:elevation="0dp"
        android:inputType="textMultiLine"
        android:maxLines="1"/>

</RelativeLayout>